<Window x:Class="FirstWPFLabs.WorkWithFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWPFLabs"
        mc:Ignorable="d"
        Title="WorkWithFileWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="OpenFile_Click"/>
                <MenuItem Header="_Save As" Click="SaveFileAs_Click"/>
            </MenuItem>
        </Menu>
        <Label Width="208" Height="30" DockPanel.Dock="Top" Content="Отредактируйте содержимое файла"/>
        <TextBox Name="MainTextBlock" AcceptsReturn="True" AcceptsTab="True" DockPanel.Dock="Bottom" Width="422" Height="241" TextWrapping="Wrap"/>
    </DockPanel>
</Window>
